# GitHub Organization Repository Indexer - Configuration Example
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control

# GitHub Personal Access Token
# Create at: https://github.com/settings/tokens (for github.com)
# For GitHub Enterprise Server, create token in your instance's settings
# Required scopes: public_repo, read:org, read:user
GITHUB_TOKEN=ghp_your_token_here

# GitHub Organization Name
# The organization whose repositories you want to index
GITHUB_ORG=your-org-name

# GitHub API Base URL (optional)
# Leave blank for github.com (uses https://api.github.com)
# For GitHub Enterprise Server, use: https://github.example.com/api/v3
# GITHUB_URL=https://github.example.com/api/v3

# Output Configuration
# Path where the JSON file will be saved
OUTPUT_FILE=repositories.json

# Optional: Backup previous version before overwriting
BACKUP_PREVIOUS=true

# Target Repository for Generated README
# The repository where the final README.md will be published
# Example: my-public-repos-index
TARGET_REPO_NAME=my-org-public-repos

# Target repository URL (for reference in documentation)
# Example: https://github.com/myorg/my-org-public-repos
TARGET_REPO_URL=https://github.com/myorg/my-org-public-repos

# Optional: Maximum number of contributors to fetch per repository
MAX_CONTRIBUTORS=5

# Optional: Include forks in the output
INCLUDE_FORKS=true

# Optional: Include archived repositories
INCLUDE_ARCHIVED=true

# Optional: Minimum stars to include (0 = include all)
MIN_STARS=0

# Optional: Number of parallel requests (respect rate limits)
PARALLEL_REQUESTS=5

# Optional: Enable detailed logging
LOG_LEVEL=INFO

# Optional: Cache directory for API responses
CACHE_DIR=.cache

# Optional: Cache expiration in hours
CACHE_EXPIRATION_HOURS=24
